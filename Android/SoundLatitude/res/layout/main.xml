<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >


<LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
    <Button
        android:id="@+id/button_mark_loc"
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:layout_weight="1"
        android:drawableLeft="@drawable/ic_menu_mylocation"
        android:text="Mark Loc"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="48dip"
        android:layout_weight="0"
        android:src="@drawable/app_icon"
        android:contentDescription="[app icon]"/>
    <Button
        android:id="@+id/button_compass"
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:layout_weight="1"
        android:drawableRight="@drawable/ic_menu_compass"
        android:text="Compass"
        />

</LinearLayout>

<TextView
    android:id="@+id/mark_loc"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="(no location marked yet)"
    android:textSize="20dip"
    android:layout_marginTop="5dip"
    android:layout_marginBottom="5dip"
    />

<TextView
    android:id="@+id/current_loc"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="(unknown location, waiting for GPS fix)"
    android:textSize="20dip"
    android:layout_marginTop="5dip"
    android:layout_marginBottom="5dip"
    />

<TextView
    android:id="@+id/curr_compass"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="(wait for compass)"
    android:textSize="20dip"
    android:layout_marginTop="5dip"
    android:layout_marginBottom="5dip"
    />

<TextView
    android:id="@+id/gps_status"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="(gps status)"
    android:textSize="20dip"
    android:layout_marginTop="5dip"
    android:layout_marginBottom="5dip"
    />


</LinearLayout>
